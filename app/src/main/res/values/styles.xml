<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pretty_margin">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="text_margin">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="button_margin" parent="text_margin">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="score_text" parent="text_margin">
        <item name="android:textSize">20sp</item>
        <item name="android:width">40sp</item>
    </style>

    <style name="player_text" parent="text">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="pretty_padding">
        <item name="android:padding">16dp</item>
    </style>

    <style name="history_item_text" parent="pretty_margin">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="history_item_date" parent="pretty_margin">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="plain_text">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_text" parent="plain_text">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subtitle_text" parent="plain_text">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
